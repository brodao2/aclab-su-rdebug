{
  "name": "aclab-su-rdebug",
  "displayName": "AC Lab SketchUp Extension Debugger",
  "description": "Allows debugging of SU extensions.",
  "version": "0.0.1",
  "preview": true,
  "publisher": "brodao-lab",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "contributors": [
    {
      "name": "Alan CÃ¢ndido",
      "email": "brodao@gmail.com",
      "url": "https://github.com/brodao2"
    }
  ],
  "categories": [
    "Debuggers"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "npm run upd-bin & tsc -p ./",
    "watch": "tsc -watch -p ./",
    "-- UPD BIN --": "",
    "upd-bin": "cmd /c copy ..\\dap-rdebug\\out\\build\\x64-debug\\dap-rdebug.??? .\\bin\\windows",
    "-- TEST --": "",
    "test": "vscode-test",
    "pretest": "npm run compile && npm run lint",
    "---RELEASE---": "",
    "release": "npx standard-version --skip.changelog --release-as 0.0.0.1",
    "tag": "git push --follow-tags origin dev",
    "package": "vsce package",
    "package-pr": "vsce package --pre-release",
    "publish": "vsce publish",
    "vscode:prepublish": "npm run compile",
    "-- LINT --": "",
    "lint": "eslint src --ext ts",
    "--- CONTRIBUTORS ---": "",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "contributors:check": "all-contributors check",
    "-- SketchUp --": "",
    "run": "\"c:\\Program Files\\SketchUp\\SketchUp 2023\\SketchUp.exe\" -rdebug \"ide port=7000\""
  },
  "dependencies": {
    "@types/vscode": "^1.86.0",
    "@vscode/debugadapter": "^1.64.0",
    "@vscode/debugadapter-testsupport": "^1.64.0",
    "@vscode/debugprotocol": "^1.64.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.23.0",
    "all-contributors-cli": "^6.26.1",
    "await-notify": "^1.0.1",
    "vscode-debugadapter-testsupport": "1.51.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.10.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "activationEvents": [
    "onLanguage:ruby",
    "onDebug"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AcLab SU Debugger",
      "properties": {
        "aclab-su-rdebug.trace": {
          "order": 0,
          "type": "string",
          "default": "off",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "description": "Traces the communication between VS Code and the Debug Adapter executable.",
          "enumDescriptions": [
            "Tracking off.",
            "Display summary message",
            "Display detailed message"
          ]
        },
        "aclab-su-rdebug.logToFile": {
          "order": 1,
          "type": "string",
          "description": "Filename to record log of the Debug Adapter executable file.",
          "default": ""
        }
      }
    },
    "breakpoints": [
      {
        "language": "ruby"
      }
    ],
    "debuggers": [
      {
        "type": "aclab-su-rdebug",
        "languages": [
          "ruby"
        ],
        "label": "SketchUp Debugger Extension",
        "configurationAttributes": {
          "launch": {
            "required": [
              "sketchUpProgram",
              "remotePort"
            ],
            "properties": {
              "sketchUpProgram": {
                "type": "string",
                "description": "Absolute path to a SketchUp executable file.",
                "default": ""
              },
              "sketchUpArguments": {
                "type": "array",
                "description": "SketchUp program arguments.",
                "default": []
              },
              "remotePort": {
                "type": "number",
                "description": "Remote port.",
                "default": 1234
              },
              "remoteWorkspaceRoot": {
                "type": "string",
                "description": "Extension Development Path (root).",
                "default": "${workspaceFolder}"
              }
            }
          },
          "attach": {
            "required": [
              "remotePort"
            ],
            "properties": {
              "remotePort": {
                "type": "number",
                "description": "Remote port.",
                "default": 1234
              },
              "remoteWorkspaceRoot": {
                "type": "string",
                "description": "Extension Development Path (root).",
                "default": "${workspaceFolder}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "aclab-su-rdebug",
            "request": "attach",
            "name": "Attach to SketchUp",
            "sketchUpProgram": "C:\\\\Program Files\\\\SketchUp\\\\SketchUp 2023\\\\SketchUp.exe"
          }
        ],
        "configurationSnippets": [
          {
            "label": "SU: Attach to SketchUp already running",
            "description": "A new setting for debugging a SketchUp extension by attaching to an already running instance.",
            "body": {
              "type": "aclab-su-rdebug",
              "request": "attach",
              "name": "Attach to SketchUp",
              "remotePort": 1234
            }
          },
          {
            "label": "SU: Launch SketchUp and attach then",
            "description": "A new setting for debugging a SketchUp extension by launching an instance and attaching to it.",
            "body": {
              "type": "aclab-su-rdebug",
              "request": "launch",
              "name": "Launch SketchUp and attach",
              "sketchUpProgram": "C:\\\\Program Files\\\\SketchUp\\\\SketchUp ${1|2023,2022,2021,2020,2019}\\\\SketchUp.exe",
              "remotePort": 1234,
              "sketchUpArguments": [
                "\\${workspaceFolder}\\\\sample\\\\${sampleFile}.skp"
              ]
            }
          }
        ]
      }
    ]
  }
}